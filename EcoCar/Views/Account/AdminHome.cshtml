<div class="container-fluid ">
    @*Purchases List Display*@
    <div class="table-responsive">
        <center><input style="width:50%" type="text" id="searchInput" onkeyup="myFunction()" placeholder="Rechercher un achat"></center><br />
        <table class="table" id="userTable">
            <thead>

                <tr class="header">
                    <th>Date d'achat</th>
                    <th>Type d'achat</th>
                    <th>Numéro de Facture</th>
                    <th>Provider</th>
