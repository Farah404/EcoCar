@model EcoCar.ViewModels.AccountViewModel
@{
    Layout = "~/Views/Shared/MainLayout.cshtml";
    ViewBag.Title = "Création Véhicule";
}

<div class="container bootstrap snippets bootdey">
    <div class="panel-body inf-content">
        <div class="row">
            <div class="col-md-4">
                <h4>Proposer un service</h4>

            @using (Html.BeginForm())
            {
                @Html.Label("Nom de l'assureur")

                    <br>
                    @Html.TextBoxFor(model => model.Insurance.InsuranceAgency, new { htmlAttributes = new { @class = "form-control", style="width:300px"}})
                    @Html.ValidationMessageFor(model => model.Insurance.InsuranceAgency)            
                    <br>

                @Html.Label("Date de fin de validité de l'assurance")

                <br>
                @Html.EditorFor(model => model.Insurance.InsuranceExpiration, new { htmlAttributes = new { @class = "form-control", style="width:300px"}})
                @Html.ValidationMessageFor(model => model.Insurance.InsuranceAgency)            
                    <br>

                @Html.Label("Numéro du contrat d'assurance")

                <br>
                @Html.TextBoxFor(model => model.Insurance.ContractNumber, new { htmlAttributes = new { @class = "form-control", style="width:300px"}})
                @Html.ValidationMessageFor(model => model.Insurance.InsuranceAgency)            
                    <br>    
                
                <button class="btn btn-success" type="submit">Soumettre</button>
            
            }

            </div>
            <div class="col-md-6">
                <img alt="" style="width:100%;" title="" src="~/Images/Itinerary.png">
            </div>
        </div>
    </div>
</div>

<hr class="solid">