@model List<EcoCar.Models.FinancialManagement.EcoStore>


@{
    Layout = "~/Views/Shared/MainLayout.cshtml";
    ViewBag.Title = "EcoStore";
}
<!--Pricing container Subscribe-->
<div id="pricing" class="container-fluid bg-grey">
    <div class="text-center">
        <h2>Abonnement</h2>
        <h4>Choisissez le type d'abonnement le plus adapté à vos besoins</h4>
    </div>
    <div class="row">
        <div class="col-sm-4">
            <div class="panel panel-default text-center">
                <div class="panel-heading">
                    <h1>Mensuel</h1>
                </div>
