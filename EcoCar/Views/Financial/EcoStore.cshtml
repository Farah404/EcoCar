                    <h3>
                        @foreach (var ecoStore in Model)
                        {
                            @ecoStore.MonthlySubscriptionPrice
                        }
                    </h3>
                    <h4>tous les mois pour</h4>
                    <h3>
                        @foreach (var ecoStore in Model)
                        {
                            @ecoStore.MonthlySubscription
                        }
                    </h3>
                    <button type="submit" name="action" value="MonthlySubscription" class="btn btn-success btn-xl">Je m'abonne</button>
                </div>
            </div>
        </div>
        <div class="col-sm-4">
