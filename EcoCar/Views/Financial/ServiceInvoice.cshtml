@model EcoCar.ViewModels.FinancialViewModel
@{
    Layout = "/Views/Shared/MainLayout.cshtml";
    ViewBag.Title = "Facture Prestattion";
}


<div class="container bootdey">
<div class="row invoice row-printable">
    <div class="col-12 col-md-8">
        <!-- col-lg-12 start here -->
        <div class="panel panel-default plain" id="dash_0">
            <!-- Start .panel -->
            <div class="panel-body p30">
                <div class="row">
                    <!-- Start .row -->
                    <div class="col-lg-6">
                        <!-- col-lg-6 start here -->
                        <div class="invoice-logo"><img width="100" src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Invoice logo"></div>
                    </div>
                    <!-- col-lg-6 end here -->
                    <div class="col-lg-6">
                        <!-- col-lg-6 start here -->
                        <div class="invoice-from">
                            <ul class="list-unstyled text-right">
                                <li>BillingAddress.AddressLine</li>
                                <li>BillingAddress.PostalCode+City</li>
                                <li>BillingAddress.Country</li>
                            </ul>
                        </div>
                    </div>
                    <!-- col-lg-6 end here -->
                    <div class="col-lg-12">
                        <!-- col-lg-12 start here -->
                        <div class="invoice-details mt25">
                            <div class="well">
                                <ul class="list-unstyled mb0">
                                    <li><strong>Invoice.InvoiceNumber</strong> ******</li>
                                    <li><strong>InvoiceIssueDate:</strong> ******</</li>
                                    <li><strong>InvoiceType:</strong>******</</li>
                                    <li><strong>PaidTo.UserProvider:</strong>******</</li>

                                </ul>
                            </div>
                        </div>
                        <div class="invoice-items">
                            <div class="table-responsive" style="overflow: hidden; outline: none;" tabindex="0">
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th class="per70 text-center">PurchaseType</th>
                                            <th class="per25 text-center">Prix</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>1024MB Cloud 2.0 Server - elisium.dynamic.com (12/04/2014 - 01/03/2015)</td>
                                            <td class="text-center">$25.00 USD</td>
                                        </tr>
                                        <tr>
                                            <td>Logo design</td>
                                            <td class="text-center">$200.00 USD</td>
                                        </tr>
                                        <tr>
                                            <td>Backup - 1024MB Cloud 2.0 Server - elisium.dynamic.com</td>
                                            <td class="text-center">$12.00 USD</td>
                                        </tr>
                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <th colspan="2" class="text-right">Total en EcoCoins:</th>
                                            <th class="text-center">$284.4.40 USD</th>
                                        </tr>
                                    </tfoot>
                                </table>
                                <div class="float-right">
                                <button type="button" class="btn btn-lg btn-primary mt-2">Imprimer</button>
                                </div>
                            </div>
                        </div>
                    </div>  
                </div>
            </div>
        </div>
    </div>
    <div class="col-6 col-md-4">
        <center><img style="width:650px" src="~/Images/ServiceRequestList.png"></center>
        </div>
</div>

</div>
