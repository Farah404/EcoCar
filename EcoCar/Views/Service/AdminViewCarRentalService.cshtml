@using static EcoCar.Models.ServiceManagement.CarRentalService

@model EcoCar.ViewModels.ServiceViewModel
@{
    Layout = "~/Views/Shared/MainLayout.cshtml";
    ViewBag.Title = "Reserver une prestation de location de véhicule";
}
<!--Add a form with an input field and a button-->

<div class="container bootstrap snippets bootdey">
    <div class="panel-body inf-content">
        <div class="row">

            @*Profile picture Part with buttons*@
            <div class="col-md-4">
                <img alt="" style="width:100%;" class=" img-thumbnail" src="~/Images/CarRental.png">

                @using (Html.BeginForm())
                {
                    <br>

                    <button class="btn btn-danger center-block" type="submit">Supprimer la prestation</button>
                }
                <br />
                    <button onclick="location.href='/Account/UserProfilePersonalByAdmin/@Model.CarRentalService.Service.UserProviderId'" class="btn btn-success center-block">Consulter le profil de l'EcoMembre</button>
                    <br />
                     @*Allowing the Admin to view the page when noone reserved/respond to the service and thus no serviceInvoice related exists*@
                @if (Model.ServiceInvoice != null)
                {
                    <button onclick="location.href='/Financial/ServiceInvoice/@Model.ServiceInvoice.Id'" class="btn btn-success center-block">Facture de la prestation</button>
                }
                 @if (Model.ServiceInvoice == null)
                {
                    <button class="btn btn-outline-success center-block">Facture de la prestation</button>
                }
            </div>
            <div class="col-md-6">
                <div class="table-responsive">
                    @*Information*@
                    <span class="text-success"><strong>Information</strong><br></span>
                    <table class="table table-user-information">
                        <tbody>
                            <tr>
                                <td>
                                    <span class="glyphicon glyphicon-play  text-success"></span>
                                    Date et heure de départ
                                </td>
                                <td class="text-success">
                                        <p>@Model.CarRentalService.Service.Start</p>
                                </td>
                            </tr>
                            <tr>
                            <tr>
                                <td>
                                    <span class="glyphicon glyphicon-stop  text-success"></span>
                                    Date et heure de d'arrivée
                                </td>
                                <td class="text-success">
                                        <p>@Model.CarRentalService.Service.End</p>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <span class="glyphicon glyphicon-arrow-up  text-success"></span>
                                    Lieu de remise des clés
                                </td>
                                <td class="text-success">
                                        <p>@Model.CarRentalService.KeyPickUpAddress</p>
                                </td>
                            </tr>

                            <tr>
                                <td>
                                    <span class="glyphicon glyphicon-arrow-down text-success"></span>
                                    Lieu de récupération des clés
                                </td>
                                <td class="text-success">
                                        <p>@Model.CarRentalService.KeyDropOffAddress</p>
                                </td>
                            </tr>

                            <tr>
                                <td>
                                    <span class="glyphicon glyphicon-tags text-success"></span>
                                   Marque du véhicule
                                </td>
                                <td class="text-success">
                                        <p>@Model.CarRentalService.Vehicule.Brand</p>
                                </td>
                            </tr>

                            <tr>
                                <td>
                                    <span class="glyphicon glyphicon-star text-success"></span>
                                    Modèle du véhicule
                                </td>
                                <td class="text-success">
                                        <p>@Model.CarRentalService.Vehicule.Model</p>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <span class="glyphicon glyphicon-cog text-success"></span>
                                    Hybride
                                </td>
                                <td class="text-success">
                                        <p>@Model.CarRentalService.Vehicule.Hybrid</p>
                                </td>
                            </tr>

                            <tr>
                                <td>
                                    <span class="glyphicon glyphicon-flash text-success"></span>
                                    100% Electrique
                                </td>
                                <td class="text-success">
                                        <p>@Model.CarRentalService.Vehicule.Electric</p>
                                </td>
                            </tr>

                            <tr>
                                <td>
                                    <span class="glyphicon glyphicon-user text-success"></span>
                                     Nombres de places disponibles
                                </td>
                                <td class="text-success">
                                        <p>@Model.CarRentalService.Vehicule.AvailableSeats</p>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>



        </div>
    </div>
</div>