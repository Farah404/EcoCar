@model EcoCar.Models.ServiceManagement.CarRentalService
@{
    Layout = "~/Views/Shared/MainLayout.cshtml";
    ViewBag.Title = "Mettre son véhicule en location";
}
<br />
<div class="progress">
<div class="progress-bar bg-success" role="progressbar" style="width: 100%;" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100">100%</div>
</div>

<div class="container bootstrap snippets bootdey">
    <div class="panel-body inf-content">
        <div class="row">
            <div class="col-md-4">
                <h4>Proposer un service: Location</h4>

                @using (Html.BeginForm())
                {
                    <div class="form-floating mb-3">
                    @Html.Label("Lieu de récupération initial des clés") <br>
                    @Html.EditorFor(model => model.KeyPickUpAddress, new { htmlAttributes = new { @class = "form-control", style="width:300px"}})
                    @Html.ValidationMessageFor(model => model.KeyPickUpAddress)
                    <br></div>

                    <div class="form-floating mb-3">
                    @Html.Label("Lieu de retour des clés") <br>
                    @Html.EditorFor(model => model.KeyDropOffAddress, new { htmlAttributes = new { @class = "form-control", style="width:300px"}})
                    @Html.ValidationMessageFor(model => model.KeyDropOffAddress)
                    <br></div>

                    @Html.HiddenFor(model => model.VehiculeId)
                    @Html.HiddenFor(model => model.ServiceId)
                    <br>
                    <button class="btn btn-success" type="submit">Soumettre</button>

                }

            </div>
            <div class="col-md-6">
                <img style="width:400px;" title="" src="~/Images/CarRental.png">
            </div>
        </div>
    </div>
</div>
