@using static EcoCar.Models.ServiceManagement.Itinerary
@model EcoCar.Models.ServiceManagement.Itinerary
@{
    Layout = "~/Views/Shared/MainLayout.cshtml";
    ViewBag.Title = "Création Itinerary";
}




    @using (Html.BeginForm())
    {
        <div class="container bootstrap snippets bootdey">
            <div class="panel-body inf-content">
                <div class="row">
                    <div class="col-md-4">
                        <h4>Proposer une prestation de Covoiturage</h4>
                        @Html.Label("FirtsStopAddress")<br>
                        @Html.TextBoxFor(model => model.FirtsStopAddress, new { htmlAttributes = new { @class = "form-control", style="width:300px"}})
                        @Html.ValidationMessageFor(model => model.FirtsStopAddress)
                        <br>

                        @Html.Label("SecondStopAddress")<br>
                        @Html.TextBoxFor(model => model.SecondStopAddress, new { htmlAttributes = new { @class = "form-control", style="width:300px"}})
                        @Html.ValidationMessageFor(model => model.SecondStopAddress)
                        <br>

                        @Html.Label("ThirdStopAddress")<br>
                        @Html.TextBoxFor(model => model.ThirdStopAddress, new { htmlAttributes = new { @class = "form-control", style="width:300px"}})
                        @Html.ValidationMessageFor(model => model.ThirdStopAddress)

                        <br>
                        <div style="overflow:auto;">
                            <button class="btn btn-success" type="submit">Suivant</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }



<hr class="solid">

