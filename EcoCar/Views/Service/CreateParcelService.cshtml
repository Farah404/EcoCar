@model EcoCar.Models.ServiceManagement.ParcelService
@{
    Layout = "~/Views/Shared/MainLayout.cshtml";
    ViewBag.Title = "Proposer un transport de colis";
}


<div class="container bootstrap snippets bootdey">
    <div class="panel-body inf-content">
        <div class="row">
            <div class="col-md-4">
                <h4>Proposer un service</h4>

                @using (Html.BeginForm())
                {
                    @Html.Label("Code barre") <br>
                    @Html.TextBoxFor(model => model.BarCode, new { htmlAttributes = new { @class = "form-control",@id="Refnunmber",@readonly = true, style="width:300px"}})
                    <br>


                    @Html.Label("Poids (kilogrammes)") <br>
                    @Html.TextBoxFor(model => model.WeightKilogrammes, new { htmlAttributes = new { @class = "form-control", style="width:300px"}})
                    @Html.ValidationMessageFor(model => model.WeightKilogrammes)
                    <br>


                    @Html.Label("Forme atypique") 
                    @Html.CheckBoxFor(model => model.AtypicalVolume, new { htmlAttributes = new { @class = "form-control", style="width:300px"}})
                    @Html.ValidationMessageFor(model => model.AtypicalVolume)
                    <br>


                    @Html.Label("Fragile")
                    @Html.CheckBoxFor(model => model.Fragile, new { htmlAttributes = new { @class = "form-control", style="width:300px"}})
                    @Html.ValidationMessageFor(model => model.Fragile)
                    <br>

                    @Html.HiddenFor(model => model.ServiceId)
                    @Html.HiddenFor(model => model.TrajectoryId)
                    @Html.HiddenFor(model => model.VehiculeId)
                    <br><br>
                    <button class="btn btn-success" type="submit">Soumettre</button>
                }

            </div>
            <div class="col-md-6">
                <img style="width:400px;" title="" src="~/Images/Parcels.png">
            </div>
        </div>
    </div>
</div>