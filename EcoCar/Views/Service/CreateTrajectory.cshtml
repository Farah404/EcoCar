@using static EcoCar.Models.ServiceManagement.Trajectory
@model EcoCar.Models.ServiceManagement.Trajectory
@{
    Layout = "~/Views/Shared/MainLayout.cshtml";
    ViewBag.Title = "Définition des caractéristiques du trajet";
}
<br />
<div class="progress">
  <div class="progress-bar bg-success" role="progressbar" style="width: 50%;" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100">75%</div>
</div>
<div class="container bootstrap snippets bootdey">
    <div class="panel-body inf-content">
        <div class="row">
            <div class="col-md-4">
                <h4>Votre trajet</h4>

                @using (Html.BeginForm())
                {
                    <div class="form-floating mb-3">
                    @Html.Label("Durée approximative en heures")<br>
                    @Html.EditorFor(model => model.DurationHours, new { htmlAttributes = new { @class = "form-control", style="width:300px",required="required"}})
                    @Html.ValidationMessageFor(model => model.DurationHours)
                    <br></div>

                    <div class="form-floating mb-3">
                    @Html.Label("Nombre d'arrêts prévus") <br>
                    @Html.EditorFor(model => model.StopNumber, new { htmlAttributes = new { @class = "form-control", style="width:300px"}})
                    @Html.ValidationMessageFor(model => model.StopNumber)
                    <br></div>

                    <div class="form-floating mb-3">
                    @Html.Label("Durée approximative d'un arrêt en minutes") <br>
                    @Html.EditorFor(model => model.StopsDurationMinutes, new { htmlAttributes = new { @class = "form-control", style="width:300px"}})
                    @Html.ValidationMessageFor(model => model.StopsDurationMinutes)
                    <br></div>

                    <div class="form-floating mb-3">
                    @Html.Label("Adresse de départ") <br>
                    @Html.EditorFor(model => model.PickUpAddress, new { htmlAttributes = new { @class = "form-control", style="width:300px",required="required"}})
                    @Html.ValidationMessageFor(model => model.PickUpAddress)
                    <br></div>

                    <div class="form-floating mb-3">
                    @Html.Label("Adresse d'arrivée") <br>
                    @Html.EditorFor(model => model.DeliveryAddress, new { htmlAttributes = new { @class = "form-control", style="width:300px",required="required"}})
                    @Html.ValidationMessageFor(model => model.DeliveryAddress)
                    <br></div>

                    <div class="form-floating mb-3">
                    @Html.Label("Nature du trajet") <br>
                    @Html.DropDownListFor(model => model.SelectTrajectoryType, Html.GetEnumSelectList<TrajectoryType>(),"--Sélectionnez le type de trajet--")
                    <br></div>

                    @Html.HiddenFor(model => model.ItineraryId)

                    <br>
                    <button class="btn btn-success" type="submit">Suivant</button>
                }

            </div>
            
            <div class="col-md-6">
                <img alt="" style="width:80%;" title="" src="~/Images/Itinerary.png">
            </div>
        </div>
    </div>
</div>