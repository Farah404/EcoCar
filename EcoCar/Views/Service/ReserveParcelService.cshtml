@using static EcoCar.Models.ServiceManagement.ParcelService

@model List<EcoCar.Models.ServiceManagement.ParcelService>
@{
    Layout = "~/Views/Shared/MainLayout.cshtml";
    ViewBag.Title = "Reserver une prestation de transport de colis";
}
<!--Add a form with an input field and a button-->

<div class="container bootstrap snippets bootdey">
    <div class="panel-body inf-content">
        <div class="row">

            @*Profile picture Part with buttons*@
            <div class="col-md-4">
                <img alt="" style="width:100%;" class=" img-thumbnail" src="~/Images/ParcelDelivery.png">

                @using (Html.BeginForm())
                {
                    <br>

                    <button class="btn btn-primary center-block" type="submit">Réserver la prestation</button>
                }
                <br />
                @foreach (var parcelService in Model)
                {

                    <button onclick="location.href='/Account/UserProfile/@parcelService.Service.UserProviderId'" class="btn btn-success center-block">Consulter le profil de l'EcoMembre</button>
                }
            </div>



            <div class="col-md-6">
                <div class="table-responsive">
                    @*Information*@
                    <span class="text-success"><strong>Information</strong><br></span>
                    <table class="table table-user-information">
                        <tbody>
                            <tr>
                                <td>
                                    <span class="glyphicon glyphicon-road  text-success"></span>
                                    Date et heure de départ
                                </td>
                                <td class="text-success">
                                    @foreach (var parcelService in Model)
                                    {
                                        <p>@parcelService.Service.Start</p>
                                    }
                                </td>
                            </tr>
                            <tr>
                            <tr>
                                <td>
                                    <span class="glyphicon glyphicon-road  text-success"></span>
                                    Date et heure de d'arrivée'
                                </td>
                                <td class="text-success">
                                    @foreach (var parcelService in Model)
                                    {
                                        <p>@parcelService.Service.End</p>
                                    }
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <span class="glyphicon glyphicon-barcode  text-success"></span>
                                    Code barre
                                </td>
                                <td class="text-success">
                                    @foreach (var parcelService in Model)
                                    {
                                        <p>@parcelService.BarCode</p>
                                    }
                                </td>
                            </tr>

                            <tr>
                                <td>
                                    <span class="glyphicon glyphicon-dashboard text-success"></span>
                                    Poids en kilogrammes
                                </td>
                                <td class="text-success">
                                    @foreach (var parcelService in Model)
                                    {
                                        <p>@parcelService.WeightKilogrammes</p>
                                    }
                                </td>
                            </tr>

                            <tr>
                                <td>
                                    <span class="glyphicon glyphicon-cloud text-success"></span>
                                    Forme atypique
                                </td>
                                <td class="text-success">
                                    @foreach (var parcelService in Model)
                                    {
                                        <p>@parcelService.AtypicalVolume</p>
                                    }
                                </td>
                            </tr>

                            <tr>
                                <td>
                                    <span class="glyphicon glyphicon-flash text-success"></span>
                                    Fragile
                                </td>
                                <td class="text-success">
                                    @foreach (var parcelService in Model)
                                    {
                                        <p>@parcelService.Fragile</p>
                                    }
                                </td>
                            </tr>



                            <tr>
                                <td>
                                    <span class="glyphicon glyphicon-arrow-up text-success"></span>
                                    Adresse de départ
                                </td>
                                <td class="text-success">
                                    @foreach (var parcelService in Model)
                                    {
                                        <p>@parcelService.Trajectory.PickUpAddress</p>
                                    }
                                </td>
                            </tr>

                            <tr>
                                <td>
                                    <span class="glyphicon glyphicon-arrow-down text-success"></span>
                                    Adresse d'arrivée
                                </td>
                                <td class="text-success">
                                    @foreach (var parcelService in Model)
                                    {
                                        <p>@parcelService.Trajectory.DeliveryAddress</p>
                                    }
                                </td>
                            </tr>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
