@using static EcoCar.Models.ServiceManagement.CarRentalService

@model EcoCar.ViewModels.ServiceViewModel
@{
    Layout = "~/Views/Shared/MainLayout.cshtml";
    ViewBag.Title = "Répondre à une sollicitation de véhicule";
}
<!--Add a form with an input field and a button-->

<div class="container bootstrap snippets bootdey">
    <div class="panel-body inf-content">
        <div class="row">

            @*Profile picture Part with buttons*@
            <div class="col-md-4">
                <img alt="" style="width:100%;" class=" img-thumbnail" src="~/Images/CarRental.png">

                @using (Html.BeginForm())
                {
                    <br>

                    <button class="btn btn-success center-block" type="submit">Réaliser la prestation à @Model.CarRentalService.Service.ServicePrice EcoCoins</button>
                }
                <br />
                    <button onclick="location.href='/Account/UserProfile/@Model.CarRentalService.Service.UserProviderId'" class="btn btn-success center-block">Consulter le profil de l'EcoMembre</button>
            </div>
            <div class="col-md-6">
                <div class="table-responsive">
                    @*Information*@
                    <span class="text-success"><strong>Information</strong><br></span>
                    <table class="table table-user-information">
                        <tbody>
                            <tr>
                                <td>
                                    <span class="glyphicon glyphicon-road  text-success"></span>
                                    Date et heure de départ
                                </td>
                                <td class="text-success">
                                        <p>@Model.CarRentalService.Service.Start</p>
                                </td>
                            </tr>
                            <tr>
                            <tr>
                                <td>
                                    <span class="glyphicon glyphicon-road  text-success"></span>
                                    Date et heure de d'arrivée'
                                </td>
                                <td class="text-success">
                                        <p>@Model.CarRentalService.Service.End</p>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <span class="glyphicon glyphicon-road  text-success"></span>
                                    Lieu de remise des clés
                                </td>
                                <td class="text-success">
                                        <p>@Model.CarRentalService.KeyPickUpAddress</p>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <span class="glyphicon glyphicon-user text-success"></span>
                                    Lieu de récupération des clés
                                </td>
                                <td class="text-success">
                                        <p>@Model.CarRentalService.KeyDropOffAddress</p>
                                </td>
                            </tr>

                            <tr>
                                <td>
                                    <span class="glyphicon glyphicon-hourglass text-success"></span>
                                    Marque du véhicule
                                </td>
                                <td class="text-success">
                                        <p>@Model.CarRentalService.Vehicule.Brand</p>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <span class="glyphicon glyphicon-pause text-success"></span>
                                    Modèle du véhicule
                                </td>
                                <td class="text-success">
                                        <p>@Model.CarRentalService.Vehicule.Model</p>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <span class="glyphicon glyphicon-arrow-down text-success"></span>
                                    Nombres de places disponibles
                                </td>
                                <td class="text-success">
                                        <p>@Model.CarRentalService.Vehicule.AvailableSeats</p>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>