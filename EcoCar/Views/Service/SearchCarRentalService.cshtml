@model  List<EcoCar.Models.ServiceManagement.CarRentalService>
@{
    Layout = "~/Views/Shared/MainLayout.cshtml";
    ViewBag.Title = "EcoCar Location de Véhicule";
}
        <!--Add a form with an input field and a button-->

   <fieldset>
    <legend> <h2>  Louer un véhicule </h2> </legend>


        <form action = "/service/SearchCarRentalService" method="get" class="form-inline">

            <div id = "choix_typeVehicule"><label> Type de véhicule : </label> @* ou par mix de catégories/sous catégories type de moteur, marque, etc.*@
					<select name="selection" > 

                        <option value ="All">Tous</option> 
                        <option value ="Car">Voiture</option>
                        <option value ="Bike">Moto</option>
                        <option value ="Bicycle">Vélo</option>
                         <option value ="Other">Autre</option>
					</select>
                 </div>

            <div>

             

            <ul> 
                 <li> <input type="date" class="form-control" size="20" name="DateDeRetrait" placeholder="Date de retrait" > </li>
                  <li> <input type="text" class="form-control" size="20" name="Marque" placeholder="Marque du véhicule" ></li>
                   <li> <input type="text" class="form-control" size="20" name="LieuDeRetrait" placeholder="Nom de ville"> </li>
                    <li> <input type="text" class="form-control" size="20" name="LieuDeRetour" placeholder="Nom de ville" > </li>
                    <li> <input type="text" class="form-control" size="20" name="Durée de location" placeholder="nombre d'heures" > </li>
                    <li>  <input type="text" class="form-control" size="20" name="Marque du véhicule" placeholder="Marque de voiture" > </li>

            </ul>
                 <button type="button" class="btn btn-success">Rechercher</button> 
            </div> 


			
              
        </form>



@foreach (var CarRentalService in Model) 
{
<h2 style="text-align:center"> Provider's Name propose un transport de colis </h2> @*récupérer prénom du prestataire via idserviceprovider de la classe service + forcer le nom du service => traduire en français*@

<div class="card">
    
  <img src="~/Images/Covoiturage.png" alt="Covoiturage" style="width:50%"> @*Image selon le type de service*@
  <h3> Lieu de récupération des clés:</h3>  <h4>@CarRentalService.KeyPickUpAddress</h4> @*remplacer par des icônes sièges, animaux, cigarette, notes musiques, bulles dialogues*@
  <h3> Lieu de retour des clés:</h3>   <h4>@CarRentalService.KeyDropOffAddress </h4>
 @* <h3> Véhicule: @CarRentalService.Vehicule </h3>*@

  <p class="price"> Tarif : 20 € </p> 
  <p><button>Réserver</button></p>
    
</div> 
}


@if (Model.Count == 0){
     <h1>Dommage...Aucun service ne correspond à votre recherche actuellement.</h1>
    <h3> Poster une demande</h3>
    <h3> <a href="SearchService?selection=All">Modifier les critères de recherche</a></h3>

}
    
</fieldset>

<hr class="solid">